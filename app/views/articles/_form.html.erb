<div class="bg-gray-300 flex  px-5 justify-center rounded-md py-4">
<%= form_with model: article do |form| %>
    <div class="py-2 flex flex-col">
    <%= form.label :title %>
    <%= form.text_field :title %>
    <% article.errors.full_messages_for(:title).each do |message| %>
        <div class="bg-red-400 px-1 rounded-sm  text-white"><%= message %></div>
    <% end %>
    </div>

    <div class="py-2 flex flex-col">
    <%= form.label :body %>
    <div rows="4" cols="50" placeholder="Write your thoughts here...">
    <%= form.text_area :body %>
    </div>
    <% article.errors.full_messages_for(:body).each do |message| %>
        <div class="bg-red-400 px-1 rounded-sm text-white"><%= message %></div>
    <% end %>
    </div>

    <div class="bg-blue-400 rounded text-center text-white hover:bg-blue-600">
        <%= form.submit %>
    </div>
<% end %>
</div>

<style>
textarea {
  resize: none;
   width:30rem;
   height:21rem;
}
</style>